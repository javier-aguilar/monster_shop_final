<h1>Create New Discount</h1>

<center>
  <%= form_tag "/merchant/discounts/", method: :post do %>
    <%= label_tag :code %>
    <%= text_field_tag :code%>

    <%= label_tag :description %>
    <%= text_field_tag :description %>

    <%= label_tag :discount %>
    <%= number_field_tag :discount %>

    <%= label_tag :number_of_items %>
    <%= number_field_tag :number_of_items %>

    <%= submit_tag 'Create Discount' %>
  <% end %>
</center>
